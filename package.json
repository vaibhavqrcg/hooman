{
  "name": "hooman",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "prisma generate --schema=apps/backend/prisma/schema.prisma && tsc -p apps/backend",
    "build:frontend": "node -r dotenv/config node_modules/.bin/vite build -c apps/frontend/vite.config.ts",
    "db:migrate": "tsx scripts/db-migrate.ts",
    "dev:api": "yarn db:migrate && tsx watch apps/backend/src/index.ts",
    "dev:frontend": "cd apps/frontend && vite",
    "dev:slack": "tsx watch apps/backend/src/workers/slack.ts",
    "dev:whatsapp": "tsx watch apps/backend/src/workers/whatsapp.ts",
    "dev:cron": "tsx watch apps/backend/src/workers/cron.ts",
    "dev:event-queue": "tsx watch apps/backend/src/workers/event-queue.ts",
    "dev": "cross-env DEBUG=hooman:* concurrently -n api,web,slack,whatsapp,cron,event-queue \"yarn dev:api\" \"yarn dev:frontend\" \"yarn dev:slack\" \"yarn dev:whatsapp\" \"yarn dev:cron\" \"yarn dev:event-queue\"",
    "start": "pm2 start ecosystem.config.cjs",
    "stop": "pm2 stop ecosystem.config.cjs",
    "restart": "pm2 restart ecosystem.config.cjs",
    "hash-password": "tsx scripts/hash-password.ts"
  },
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^4.0.60",
    "@ai-sdk/anthropic": "^3.0.44",
    "@ai-sdk/azure": "^3.0.30",
    "@ai-sdk/deepgram": "^2.0.20",
    "@ai-sdk/deepseek": "^2.0.20",
    "@ai-sdk/google": "^3.0.29",
    "@ai-sdk/google-vertex": "^4.0.58",
    "@ai-sdk/mcp": "^1.0.0",
    "@ai-sdk/mistral": "^3.0.20",
    "@ai-sdk/openai": "^3.0.29",
    "@anthropic-ai/sdk": "^0.72.1",
    "@azure/search-documents": "^12.2.0",
    "@google/genai": "^1.40.0",
    "@mistralai/mistralai": "^1.14.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@one710/consciousness": "^1.0.3",
    "@one710/recollect": "^1.0.2",
    "@prisma/client": "5",
    "@slack/bolt": "^4.4.0",
    "ai": "^6.0.86",
    "argon2": "^0.44.0",
    "bullmq": "^5.67.3",
    "chromadb": "^3.3.1",
    "cors": "^2.8.6",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "ioredis": "^5.9.2",
    "jose": "^6.1.3",
    "lucide-react": "^0.563.0",
    "minimatch": "^10.2.2",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "openai": "^6.17.0",
    "prisma": "5",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "remark-gfm": "^4.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "whatsapp-web.js": "^1.34.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^1.4.12",
    "@types/node-schedule": "^2.1.8",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "pm2": "^6.0.14",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=20"
  }
}
